<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_agent_report_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/order_complete_count_ll"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/order_complete_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成订单数"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/order_complete_count_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/sort_up" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_complete_price_ll"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/order_complete_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成订单金额(元)"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/order_complete_price_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/sort_up" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>